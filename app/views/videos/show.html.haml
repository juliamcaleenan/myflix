%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span= "Rating: #{@video.average_rating}/5.0" if @reviews.count > 0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          = link_to "+ My Queue", queue_items_path(video_id: @video.id), class: "btn btn-default", method: "post"

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, @review] do |f|
        %fieldset
          .row
            .col-sm-3
              = f.select(:rating, [["5 Stars", 5], ["4 Stars", 4], ["3 Stars", 3], ["2 Stars", 2], ["1 Star", 1]], { label: "Rate this video" })
          .row
            .col-sm-8
              = f.text_area :description, label: "Write Review", rows: 6
        %fieldset.actions.clearfix
          = f.submit "Submit", class: "btn"
          = link_to "Cancel", video_path(@video)
      %header
        %h3= "User Reviews (#{@reviews.count})"
      %ul
        - @reviews.reload.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span= "Rating: #{review.rating} / 5"
                %p
                  by
                  = link_to review.user.full_name, ""
              .col-sm-8
                %p= review.description
