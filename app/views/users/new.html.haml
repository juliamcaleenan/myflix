%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
        %header
          %h1 Register
        = f.alert_message "Please fix the #{"error".pluralize(@user.errors.count)} below", error_summary: false
        = f.email_field :email_address, label: "Email Address"
        = f.password_field :password
        = f.text_field :full_name, label: "Full Name"
        = f.form_group do
          = f.submit "Sign up"